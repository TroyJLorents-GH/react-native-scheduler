{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "screens/**/*",
    "utils/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
